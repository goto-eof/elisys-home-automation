<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      ">

    <changeSet author="Andrei Dodu" id="2023-11-24-001">
        <createTable tableName="${tablePrefix}alive">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mac_address" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_ack_timestamp" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="2023-11-24-002" author="Andrei Dodu">
        <addUniqueConstraint columnNames="mac_address"
                             constraintName="mac_address_unique"
                             tableName="${tablePrefix}alive"
                             validate="true"/>
    </changeSet>


    <changeSet author="Andrei Dodu" id="2023-11-24-003">
        <createTable tableName="${tablePrefix}sensor_configuration">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mac_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="alert_endpoint" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="i_am_alive_endpoint" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="i_am_alive_interval_seconds" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="crontab" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="insert_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="update_date" type="DATETIME" defaultValueComputed="${defaultTimestamp}"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>